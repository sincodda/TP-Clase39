<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title class="titulo">Editar Película</title>
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <%- include('../partials/header') %>
    <h1 class="titulo">Película Editada:  <%= Movie.title %></h1>
    <section class="formulario">
        <form action="/movies/update/<%= Movie.id %>?_method=PUT" method="POST">

            <label for="title">Title </label>
            <p><input type="text" name="title" id="" value="<%= locals.errors? locals.old.title : Movie.title %>" ></p>
            <% if (locals.errors) { %>
                <div class="error"> 
                    <%= locals.errors?.title?.msg %> 
                </div>
            <% } %>

            <label for="rating">Rating </label>
            <p><input type="text" name="rating" id="" value="<%= locals.errors? locals.old.rating : Movie.rating %>" ></p>
            <% if (locals.errors) { %>
                <div class="error"> 
                    <%= locals.errors?.rating?.msg %> 
                </div>
            <% } %>

            <label for="awards">Awards </label>
            <p><input type="number" name="awards" id="" value="<%= locals.errors? locals.old.awards : Movie.awards %>" ></p>
            <% if (locals.errors) { %>
                <div class="error"> 
                    <%= locals.errors?.awards?.msg %> 
                </div>
            <% } %>

            <label for="release_date">Release date </label>
            <p><input type="date" name="release_date" id="" value="<%= locals.errors? locals.old.release_date : Movie.release_date.toISOString().split('T')[0] %>" ></p>
            <% if (locals.errors) { %>
                <div class="error"> 
                    <%= locals.errors?.release_date?.msg %> 
                </div>
            <% } %>

            <label for="length">Length </label>
            <p><input type="number" name="length" id="" value="<%= locals.errors? locals.old.length : Movie.length %>" ></p>
            <% if (locals.errors) { %>
                <div class="error"> 
                    <%= locals.errors?.length?.msg %> 
                </div>
            <% } %>

            <label for="genre_id">Genre </label>
            <p>
                <select name="genre_id" id="" required>
                    <% allGenres.forEach(genre => { %>
                    <option value="<%= genre.id %>" <% if (Movie.genre_id === genre.id) { %><%= 'selected' %><% }; %>><%= genre.name %></option>
                    <% }); %>
                </select>
            </p>
            <% if (locals.errors) { %>
                <div class="error"> 
                    <%= locals.errors?.genre_id?.msg %> 
                </div>
            <% } %>
            
            <br>
            <p> <button class="botonAgregar" type="submit">Actualizar</button>
        
            <a  class="botonVolver" href="/movies">Listado de Películas</a></p>
        </form>
    </section>
</body>

</html>